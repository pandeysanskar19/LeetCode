#c++ :
time complexity = O(2*m*n)
space complexity = O(1)


class Solution {
public:
    void setZeroes(vector<vector<int>>& matrix) {
        int m=matrix.size();
        int n=matrix[0].size();
        int column0=1;
// Step 1: Mark first row & column
        for(int i=0;i<m;i++){
            for(int j=0;j<n;j++){
                if(matrix[i][j]==0){
                    matrix[i][0]=0;

                    if(j!=0){
                        matrix[0][j]=0;
                    }
                    else{
                        column0 =0;
                    }
                }
            }
        }
        // Step 2: Set inner matrix to 0
        for(int i=1;i<m;i++){
            for(int j=1;j<n;j++){
                if(matrix[0][j]==0 || matrix[i][0]==0){
                    matrix[i][j]=0;
                }
            }
        }
        // Step 3: Handle first row
        if(matrix[0][0] ==0){
            for(int j=0;j<n;j++){
                matrix[0][j]=0;
            }
        }
        
        // Step 4: Handle first column
        if(column0 ==0){
            for(int i=0;i<m;i++){
                matrix[i][0]=0;
            }
        }
    }
    
};
