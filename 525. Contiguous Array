#cpp

class Solution {
public:
    int findMaxLength(vector<int>& nums) {
        unordered_map<int,int>mp;
        int prefix =0,maxLen =0;

        mp[0] = -1;
        for(int i=0;i< nums.size();i++){
            prefix +=(nums[i]==0?-1:1);

            if(mp.count(prefix)){
                maxLen = max(maxLen,i-mp[prefix]);
            }
            else{
                mp[prefix] = i;
            }
        }
        return maxLen;
    }
    
};
