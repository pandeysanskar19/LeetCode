c++

class Solution {
public:
    vector<int> sortedSquares(vector<int>& nums) {
        int n=nums.size();
        vector<int>sanskar(n);
        int i=0;
        int j=n-1;
        int k=n-1;
        while(i<=j){
            int l = nums[i]*nums[i];
            int r = nums[j]*nums[j];
            if(l<r){
                sanskar[k--]=r;
                j--;
            }else{
                sanskar[k--]=l;
                i++;
            }
        }
        return sanskar;
  
    }
};
